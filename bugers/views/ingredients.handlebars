<p>
<center><h1>current ingredients in stock</h1></center>

<div id="inStockIngredients">
	<!-- TEMPLATE -->
	<form class="inStock" id="template" action="delete" method="POST">
	  <div id = "in">ingredient, $ price</div>

	  <div class="edit-div">
		  <input type="text" id="edit-ingredient">
		  <input type="text" id="edit-price">
		  <input type="button" class="edit-submit" value="submit"><br>
	  </div>

	  <input type="button" class="edit-button" value="edit">
	  <input type="submit" class="submit" value="out of stock">
	</form>


	<!-- ACUTAL ITEMS -->
{{#each inStock}}
	<form class="inStock" id="{{_id}}" action="delete" method="POST">
	  <div id = "in">{{ingredient}}, $ {{price}}</div>

	  <!-- HIDDEN BUTTONS -->
	  <div class="edit-div">
		  <input type="text" id="edit-ingredient">
		  <input type="text" id="edit-price">
		  <input type="button" class="edit-submit" value="submit"><br>
	  </div>

	  <input type="button" class="edit-button" value="edit">
	  <input type="submit" class="submit" value="out of stock">
	</form>
{{/each}}
</div>
